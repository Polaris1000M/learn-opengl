#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aColor;

out vec3 ourColor;
uniform int xOffset;

void main() {
  if(aPos.y == -0.5) {
    gl_Position = vec4(aPos.x, 0.5f, aPos.z, 1.0);
  }
  else {
    gl_Position = vec4(aPos.x, -0.5f, aPos.z, 1.0);
  }

  ourColor = aColor;
}
